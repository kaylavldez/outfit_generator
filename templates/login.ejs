<!-- LOGIN PAGE (has login and sign-up link) -->

<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>Outfit Generator</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <link rel="stylesheet" href="design.css">
    <link rel="stylesheet" href="form.css">
</head>

<body>
    <div class="header" id="loginHeader">
        <h1>outfit generator</h1>
    </div>

    <div class="browser" id="loginBrowser">
        <p id="msg"><%= msg %></p>

        <form action="http://localhost:<%= port %>/" method="post">
            <div>
                username: <input type="text" name="username" class="userInput">
            </div>
            <div>
                password: <input type="password" name="password" class="userInput">
            </div>
            <br>
            <input type="submit" value="login" class="mainBtn" id="loginBtn">
        </form>
        <br>
        <a href="/signUp">sign up</a>
    </div>

    <footer>
        created by kayla valdez
    </footer>
</body>
</html>