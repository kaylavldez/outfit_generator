<!-- CREATE PAGE (user generates outfit, can shuffle, can save to db) -->

<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>Outfit Generator</title>
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
	<link rel="stylesheet" href="design.css">
	<link rel="stylesheet" href="style.css">
	<script src="createFunctions.js"></script>
</head>

<body>
	<div class="header">
		<a href="/">home</a>
		<a href="/create">create</a>
		<p id="temp"><%- temperature %></p>
	</div>
	
	<div class="browser" id="main">
		<form id="outfitForm">
			<div class="browser" id="tops">
				<img src="images/tops/tops0.png" class="item" id="topsImg" name="top">

				<div class="options">
					<img src="images/left-arrow.png" class="button" id="prevBtn" onclick="previous('tops')">
					top
					<img src="images/right-arrow.png" class="button" id="nextBtn" onclick="next('tops')">	
				</div>
			</div>

			<div class="browser" id="bottoms">
				<img src="images/bottoms/bottoms0.png" class="item" id="bottomsImg" name="bottoms">
				
				<div class="options">
					<img src="images/left-arrow.png" class="button" id="prevBtn" onclick="previous('bottoms')">
					bottoms
					<img src="images/right-arrow.png" class="button" id="nextBtn" onclick="next('bottoms')">
				</div>
			</div>
		
			<div class="browser" id="shoes">
				<img src="images/shoes/shoes0.png" class="item" id="shoesImg" name="shoes">

				<div class="options">
					<img src="images/left-arrow.png" class="button" id="prevBtn" onclick="previous('shoes')">
					shoes
					<img src="images/right-arrow.png" class="button" id="nextBtn" onclick="next('shoes')">
				</div>
			</div>

			<div class="browser" id="purses">
				<img src="images/purses/purses0.png" class="item" id="pursesImg" name="purse">

				<div class="options">
					<img src="images/left-arrow.png" class="button" id="prevBtn" onclick="previous('purses')">
					purse
					<img src="images/right-arrow.png" class="button" id="nextBtn" onclick="next('purses')">
				</div>
			</div>

			<input type="button" value="shuffle" class="mainBtn" id="shuffle" onclick="shuffleItems()">
			<p id="saved">outfit saved!</p>
			<input type="button" value="save" class="mainBtn" id="save" onclick="saveThisOutfit()">
		</form>
	</div>

	<footer>
        created by kayla valdez
    </footer>
</body>
</html>